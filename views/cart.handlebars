<div class="container">
<h2>Your Shopping Cart</h2>
{{#if items.length}}
    <ul>
      {{#each items}}
        <li>
          <div class="cart-item">
            <img src="{{image}}" alt="{{name}}" class="cart-item-image">
            <div class="cart-item-details">
              <h3>{{name}}</h3>
              <p>Description: {{description}}</p>
              <p>Price: ${{price}}</p>
              <p>Quantity: {{quantity}}</p>
            </div>
          </div>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>Your cart is empty.</p>
  {{/if}}
</div>